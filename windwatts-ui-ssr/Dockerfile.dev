FROM node:lts-alpine

WORKDIR /app

# Accept API base URL as build arg and env
ARG WINDWATTS_API_BASE
ENV WINDWATTS_API_BASE=${WINDWATTS_API_BASE}

COPY package.json tsconfig.json next.config.mjs ./

RUN npm install

COPY app ./app
COPY src ./src

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--hostname", "0.0.0.0", "--port", "3000"]
